$("#qna-<%= @qna.id %>").html('<%= @qna.answer %><%= form_for @qna, url: {action: "qna_edit"}, :remote => "true" do |f| %><%= f.hidden_field :id, :value => @qna.id %><%= f.submit "Edit", :style => "position: relative; top: #{ !@qna.answer.present? ? "-50" : "-70" }px; left: 80%;", :class => "btn btn-info" %><% end %>');
$("#qna-<%= @qna.id %>").append('<%= form_for @qna, url: {action: "qna_delete"}, method: :delete do |f| %><%= f.hidden_field :id, :value => @qna.id %><%= f.submit "Delete", :style => "position: relative; top: #{ !@qna.answer.present? ? "-50" : "-70" }px; left: 90%;", :class => "btn btn-danger" %><% end %>')