      <tr><th><%= t("prize.position.third") %></th></tr>
      <tr><td class="prize-name">トラベル Tケース<span> ©Disney</span></td></tr>
      <tr><td>ミニーとデイジー</td></tr>
      <tr><td>800円＋tax</td></tr>
    </table>
  </div>
</div>